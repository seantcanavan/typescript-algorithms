{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-console": "warn",
    "curly": [
      "error",
      "all"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-redeclare": "error",
    "no-use-before-define": [
      "error",
      {
        "functions": true,
        "classes": true
      }
    ],
    "no-undef": "error",
    "prefer-const": "error",
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ]
  }
}
